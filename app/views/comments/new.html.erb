<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Send to message</h1>
        <%= form_for @comment do |f| %>
          <div class="form-group">
            <%= f.label :comment %>
            <%= f.text_area :comment, class: 'form-control' %>
            <%= f.hidden_field :topic_id, :value => @topic_id %>
          </div>
          <% if !current_user.nil? %>
          <%= f.submit '送信', class: 'btn btn-black btn-block' %>
          <% end %>

        <% end %>
      </div>
    </div>
  </div>
</div>
